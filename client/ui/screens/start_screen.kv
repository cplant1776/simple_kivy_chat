#===================================
# LOGIN SCREEN
#===================================
<StartScreen>:
    BoxLayout
        on_enter: root.screen_tester_func()
        id: start_layout
        orientation: 'vertical'
        padding: ['10dp','50dp','10dp','50dp']
        spacing: '50dp'

        Label:
            text: '[PLACEHOLDER]'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'
            padding: 10

            Label:
                text: 'Server IP Address:'

            TextInput:
                id: server_ip
                multiline: False
                write_tab: False
                size_hint: 0.5, 1
                pos_hint: {'center_x': 0.5}

        BoxLayout:
            orientation: 'vertical'
            padding: 10

            Label:
                text: 'Username:'

            TextInput:
                id: username
                multiline:False
                write_tab: False
                password: True
                size_hint: 0.5, 1
                pos_hint: {'center_x': 0.5}

        Button:
            text: 'Submit'
            pos_hint: {'center_x': 0.5}
            size_hint: 0.4,0.5
            on_release: pass
            on_release: pass

