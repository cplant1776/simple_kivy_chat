#===================================
# CHAT ROOM SCREEN
#===================================
<ChatRoomScreen>:
    id: chat_room_screen
    on_enter: self.on_enter
    BoxLayout:
        orientation: 'vertical'
        text: 'CHATROOMSCREEN PLACEHOLDER'

        BoxLayout:
            id: chat_layout
            orientation: 'vertical'

            BoxLayout:
                id: chat_top
                size_hint_x: 1
                size_hint_y: 0.15
                padding: 10
                spacing: 10

                TextInput:
                    id: message
                    size_hint_x: 0.85
                    use_bubble: True
                    write_tab: False
#                    multiline: False
                    on_text_validate: app.root.client_protocol.send_message(message.text)
                    on_text_validate: chat_room_screen.schedule_clear_input_box()

                Button:
                    id: send_button
                    size_hint_x: 0.15
                    text: 'Send'
                    on_press: app.root.client_protocol.send_message(message.text)
                    on_press: chat_room_screen.schedule_clear_input_box()

            BoxLayout:
                id: chat_bottom
                size_hint_x: 0.98

                TextInput:
                    background_color: (0,0,0,1)
                    foreground_color: (1,1,1,1)
                    size_hint_x: 0.8
                    text_size: self.width, None
                    use_bubble: True
                    text: root.chat_history
                    readonly: True

                BoxLayout:
                    id: user_list_box
                    orientation: 'vertical'
                    size_hint_x: 0.2
                    spacing: "5dp"

                    Label:
                        markup: True
                        text: "[b]Connected Users[/b]"
                        font_size: 20
                        size_hint_y: 0.1

                    ScrollView:
                        id: user_list_container
                        size_hint_y: 0.9
                        size_hint_x: 1
#                        size_hint_y: None
                        BoxLayout:
                            orientation: 'vertical'
#                            size_hint: 1, None
                            id: user_list




<ScrollableLabel@ScrollView>:
    text: 'SCROLLABLELABEL'

    TextInput:
        size_hint_y: 1
        text_size: self.width, None
        use_bubble: True
        text: root.text

<ChatLabel@Label>:
    text: 'PLACEHOLDER'

<ContextMenu@BoxLayout>:
    id: context_menu
    orientation: 'vertical'

    Button:
        id: private_message
        text: "Send private message"
        on_press: app.root.ids.chat_room_screen.next_message_private(context_menu.parent.name)
        on_press: self.parent.parent.dismiss()

    Button:
        id: ignore
        text: "Toggle ignore"
        on_press: app.root.client_protocol.toggle_user_ignore(context_menu.parent.name)
        on_press: self.parent.parent.dismiss()

<PopModal@ModalView>:
    size_hint: None, None
    height: '50dp'
    width: '200dp'
#    pos_hint_x: 0 if self.touch is None else self.touch.spos[0]
#    pos_hint_y: 0 if self.touch is None else self.touch.spos[1]

<ModalPopupButton@Button>:
    size_hint: 1, None
    height: '50dp'
#    width: '10dp'

<ServerShutdownPopup@ModalView>:
    size_hint: None, None
    height: '50dp'
    width: '1000dp'

    Label:
        text: "Server shutdown! You will now be disconnected."


