#===================================
# START SCREEN
#===================================
<StartScreen>:
#    on_enter: self.on_enter
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: ['10dp','35dp','10dp','35dp']
        spacing: '35dp'

        Label:
            text: 'Simple Chat Client'
#            text: app.root.session.style
            font_size: 60

        BoxLayout:
            orientation: 'vertical'
            padding: 10

            Label:
                text: 'Server IP Address'

            TextInput:
                id: server_ip
                multiline: False
                write_tab: False
                size_hint: 0.5, 1
                text: '127.0.0.1'
                pos_hint: {'center_x': 0.5}

        BoxLayout:
            orientation: 'vertical'
            padding: 10

            Label:
                text: 'Username'

            TextInput:
                id: username
                multiline:False
                write_tab: False
                size_hint: 0.5, 1
                text: 'josh'
                pos_hint: {'center_x': 0.5}

        BoxLayout:
            orientation: 'vertical'
            padding: 10

            Label:
                text: 'Password'

            TextInput:
                id: password
                multiline:False
                write_tab: False
                password: True
                size_hint: 0.5, 1
                text: 'brown'
                pos_hint: {'center_x': 0.5}

        Button:
            text: 'Submit'
            pos_hint: {'center_x': 0.5}
            size_hint: 0.4,0.5
            on_release: root.attempt_to_connect(server_ip.text, username.text, password.text)

<SubmissionPopup@ModalView>:
    size_hint: None, None
    height: '50dp'
    width: '200dp'
    auto_dismiss: False

    Label:
        text: "Connecting to server...."

<FailedSubmissionPopup@ModalView>:
    size_hint: 0.75, 0.2
    pos_hint: {'top': 0.7}
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        Label:
            id: failed_submission_label
            text: "failedsubmissionpopup placeholder"

        Button:
            pos_hint: {'center_x': 0.5}
            size_hint_x: 0.3
            size_hint_y: 0.25
            id: dismiss_failed_popup
            text: "Dismiss"
            on_press: root.dismiss()